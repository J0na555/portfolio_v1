---
import StatusCard from "../React/StatusCard.tsx";
import { SOCIALS } from "../data/socials";

const github = SOCIALS.find(s => s.name === "GitHub");
---

<footer class="w-full py-12 border-t border-[#ffffff10]">
  <div class="max-w-5xl mx-auto px-4 md:px-0">
    <div class="flex justify-center items-center">
      {/* Live Status Card */}
      <div class="flex justify-center">
        <StatusCard client:load />
      </div>
    </div>

    <div class="mt-12 pt-8 border-t border-[#ffffff10]">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-sm text-[var(--white-icon)]">
          Copyright Â© 2025 <a href={github?.url} class="text-[var(--white)] hover:underline">Yonas Girma</a>.
        </p>
        <div class="flex gap-6 text-xs text-[var(--white-icon)]">
          <span class="flex items-center gap-2">
             <span class="w-1.5 h-1.5 rounded-full bg-[#A9FF5B]"></span>
             Available for hire
          </span>
        </div>
      </div>
    </div>
  </div>
</footer>
